@using System.Linq
@using myLibrary.Models
@model List<newOrder>
@using System.Collections.Generic
<table class="table">
    <thead>
     <tr>
       <th> Заказ ID </th>
       <th >ФИО</a> </th>
       <th>Телефон</th>
       <th>Почта </th>
       <th>Куда Откуда</th>
       <th>Срок </th>
       <th>Вес</th>
       <th>Цена</th>  
     </tr>
    </thead>
    <tbody>
    @foreach(var item in Model)
    {
        <tr>
           <td> @item.Id </td>
           <td> @item.FullName</td>
           <td> @item.Phone</td>
           <td> @item.Email</td>
           <td> @item.FromWhereToWhere</td>
           <td> @item.Days</td>
           <td> @item.Weight</td>
           <td> @item.Price</td>
         
        </tr>
    }
    </tbody>
<form method="POST">
<button type="submit" name="Flag" class="btn btn-primary" value="SortByName">Sort by Name</button>

<button type="submit" name="Flag" class="btn btn-primary" value="SortByEmail">Sort by Email</button>

<button type="submit" name="Flag" class="btn btn-primary" value="GroupByType">Group By</button>

</form>


</table>