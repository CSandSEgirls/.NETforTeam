@using System.Linq
@using myLibrary.Models;
@model List<Book>
@using System.Collections.Generic
@{
    ViewData["Title"] = "Book";
}
<table class="table">
    <thead>
     <tr>
       <th> Id  </th>
       <th> Name  </th>
       <th> Author  </th>
    
     </tr>
    </thead>
    <tbody>
    @foreach(var item in Model)
    {
        <tr>
           <td> @item.Id </td>
           <td> @item.Name </td>
           <td> @item.Author </td>
         
        </tr>
    }
    </tbody>
</table> 