@using System.Linq
@using swTwo.Models
@model List<Input>
@using System.Collections.Generic

<div class="form-group">
  <label for="usr">Book Name:</label>
  <form method="POST">
   <input type="text" name="BookName"  class="form-control" ></input>
  <label for="usr">Reader ID:</label>
   <input type="text" name="PersonId"  class="form-control" ></input>
  <label for="usr">Employee ID:</label>
   <input type="text" name="EmployeeId"  class="form-control"  ></input>
   <br>
<button type="submit" class="btn btn-primary">Submit</button>
</form>
</div>

<table class="table">
    <thead>
     <tr>
       <th> Reader  </th>
       <th> Book name </th>
        <th>BorrowDate </th>
    
     </tr>
    </thead>
    <tbody>
    @foreach(var item in Model)
    {
        <tr>
           <td> @item.PersonId </td>
           <td> @item.BookName </td>
          <td> @item.BorrowDate  </td>
         
        </tr>
    }
    </tbody>
</table> 