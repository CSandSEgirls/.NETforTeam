@using System.Linq
@using swTwo.Models
@model List<Historys>
<div class="form-group">
  <label for="usr">Reader Name:</label>
  <form method="POST">
   <input type="text" name="Name"  class="form-control" ></input>
   </form>
</div>
<table class="table">
    <thead>
     <tr>
       <th> Reader  </th>
       <th> Book name </th>
        <th>  BorrowDate </th>
       <th>  ReturnDate  </th>
    
     </tr>
    </thead>
    <tbody>
    @foreach(var item in Model)
    {
        <tr>
           <td> @item.Name </td>
           <td> @item.BookName  </td>
           <td> @item.BorrowDate  </td>
           <td> @item.ReturnDate  </td>
         
        </tr>
    }
    </tbody>
</table>  